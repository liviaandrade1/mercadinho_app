<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Splash_Activity"
    android:background="#C5E8F8">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/ImgCesta"
        android:src="@drawable/acerta"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mercadinho Ideal"
        android:layout_centerHorizontal="true"
        android:layout_margin="270dp"
        android:textSize="40sp"
        android:fontFamily="@font/spicyriceregular"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Livz e Glau"
        android:layout_marginTop="966sp"
        android:layout_centerHorizontal="true"
        android:textColor="#9EC1CC"
        />





</RelativeLayout>